# Archivo de configuración para DaBot v2
# Copia este archivo como .env y completa con tus valores

# Token del bot de Discord (REQUERIDO)
# Obten tu token desde https://discord.com/developers/applications
DISCORD_TOKEN=tu_token_de_discord_aquí

# Configuraciones opcionales
DEBUG_MODE=false
LOG_LEVEL=INFO
DATABASE_PATH=./bot_database.db
FFMPEG_PATH=auto

# Configuraciones de música (opcionales)
MUSIC_MAX_QUEUE=50
MUSIC_TIMEOUT=300
DEFAULT_VOLUME=50

# Configuraciones de moderación (opcionales)
MAX_WARNINGS=3
AUTO_MODERATE=true
LOG_ALL_ACTIONS=true
